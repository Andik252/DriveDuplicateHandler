   "source": [
    "from google.colab import auth\n",
    "from googleapiclient.discovery import build\n",
    "from googleapiclient.errors import HttpError\n",
    "from google.colab import files\n",
    "\n",
    "def list_files_in_folder_recursive(folder_id):\n",
    "    files = []\n",
    "    folders = [folder_id]\n",
    "    while folders:\n",
    "        current_folder_id = folders.pop()\n",
    "        page_token = None\n",
    "        while True:\n",
    "            try:\n",
    "                response = service.files().list(\n",
    "                    q=f\"'{current_folder_id}' in parents and trashed=false\",\n",
    "                    fields=\"nextPageToken, files(id, name, mimeType, createdTime, parents)\", \n",
    "                    pageSize=1000,\n",
    "                    pageToken=page_token\n",
    "                ).execute()\n",
    "                items_in_folder = response.get('files', [])\n",
    "                for item in items_in_folder:\n",
    "                    if item['mimeType'] == 'application/vnd.google-apps.folder':\n",
    "                        folders.append(item['id'])\n",
    "                    else:\n",
    "                        files.append(item)\n",
    "                page_token = response.get('nextPageToken')\n",
    "                if not page_token:\n",
    "                    break\n",
    "            except HttpError as error:\n",
    "                print(f\"Error: {error}\")\n",
    "                break\n",
    "    return files\n",
    "\n",
    "def find_duplicate_files(files):\n",
    "    duplicates = {}\n",
    "    for file in files:\n",
    "        name = file['name']\n",
    "        if name not in duplicates:\n",
    "            duplicates[name] = []\n",
    "        duplicates[name].append(file)\n",
    "    return {name: files for name, files in duplicates.items() if len(files) > 1}\n",
    "\n",
    "def remove_file_from_folder(file_id, folder_id):\n",
    "    try:\n",
    "        service.files().update(fileId=file_id, removeParents=folder_id).execute()\n",
    "    except HttpError as error:\n",
    "        print(f\"Failed to remove file with ID {file_id}: {error}\")\n",
    "\n",
    "def write_output_to_file(output, filename=\"output.txt\"):\n",
    "    with open(filename, \"w\") as file:\n",
    "        file.write(output)\n",
    "    print(f\"Results saved to '{filename}'.\")\n",
    "\n",
    "def prompt_for_download(output):\n",
    "    while True:\n",
    "        choice = input(\"Do you want to download the output as a text file? (y/n): \").strip().lower()\n",
    "        if choice in [\"y\", \"n\"]:\n",
    "            break\n",
    "    if choice == \"y\":\n",
    "        filename = \"output.txt\"\n",
    "        write_output_to_file(output, filename)\n",
    "        files.download(filename)\n",
    "        print(\"Text file downloaded.\")\n",
    "    else:\n",
    "        print(\"No file created.\")\n",
    "\n",
    "def process_duplicates(folder_id):\n",
    "    all_files = list_files_in_folder_recursive(folder_id)\n",
    "    duplicate_files = find_duplicate_files(all_files)\n",
    "    output = \"\"\n",
    "    if duplicate_files:\n",
    "        output += \"==========================\\n\"\n",
    "        output += \"Duplicate files found and will be removed, keeping the oldest one: \\n\"\n",
    "        output += \"==========================\\n\"\n",
    "        for name, files in duplicate_files.items():\n",
    "            files.sort(key=lambda f: f['createdTime'])\n",
    "            oldest_file = files[0]\n",
    "            output += f\"{name} - {len(files)} file(s) found:\\n\"\n",
    "            for i, file in enumerate(files, start=1):\n",
    "                output += f\"  {i}. Upload Time: {file['createdTime']}\\n\"\n",
    "            output += f\"Will keep file 1.\\n\"\n",
    "            output += \"--------------------------\\n\"\n",
    "            for file in files[1:]:\n",
    "                remove_file_from_folder(file['id'], file['parents'][0])\n",
    "        output += \"==========================\\n\"\n",
    "    else:\n",
    "        output += \"==========================\\n\"\n",
    "        output += \"No duplicate files found.\\n\"\n",
    "        output += \"==========================\\n\"\n",
    "    print(output)\n",
    "    prompt_for_download(output)\n",
    "\n",
    "def main_program():\n",
    "    auth.authenticate_user()\n",
    "    service = build('drive', 'v3')\n",
    "    exclude_folders = [\"Colab Notebooks\"]\n",
    "    results = service.files().list(q=\"mimeType='application/vnd.google-apps.folder' and trashed=false\", fields=\"files(id, name)\").execute()\n",
    "    folders = [folder for folder in results.get('files', []) if folder['name'] not in exclude_folders]\n",
    "    print(\"Your folders in Google Drive:\")\n",
    "    for i, folder in enumerate(folders, start=1):\n",
    "        print(f\"{i}. {folder['name']}\")\n",
    "    folder_input = input(\"Enter folder number to check for duplicates: \")\n",
    "    folder_index = int(folder_input) - 1\n",
    "    selected_folder = folders[folder_index] if 0 <= folder_index < len(folders) else None\n",
    "    if selected_folder:\n",
    "        process_duplicates(selected_folder['id'])\n",
    "    else:\n",
    "        print(\"Folder not found.\")\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    try:\n",
    "        main_program()\n",
    "    except KeyboardInterrupt:\n",
    "        print(\"Program stopped by user.\")\n",
    "    except Exception as e:\n",
    "        print(f\"Unexpected error: {e}\")"
   }
  ],
